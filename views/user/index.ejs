      <script>
        let currentPage = 1;
        const itemsPerPage = 6;
      
        async function loadNews() {
          try {
            const res = await fetch(`/api/national?page=${currentPage}&limit=${itemsPerPage}`);
            const data = await res.json();
      
            const container = document.getElementById("news-grid");
      
            if (data.length === 0 && currentPage === 1) {
              container.innerHTML = "<p>No news available.</p>";
              document.getElementById("loadMoreBtn").style.display = "none";
              return;
            }
      
            data.forEach(news => {
              const card = document.createElement("a");
              card.href = news.link;
              card.style.textDecoration = "none";
      
              card.innerHTML = `
                <div class="news-card-about">
                    <a href="/${news.path}/${news._id}" style="text-decoration: none; color: inherit;">
                  <div class="video-thumbnail">
                    <img src="/${news.image}" alt="News Image" loading="lazy" style="width: 100%; height: 180px; object-fit: cover; border-radius: 8px;">
                  </div>
                  <p class="category" style="color: #cc0000;">${news.location}</p>
                  <h3 style="margin: 10px 0 5px 0;">${news.title}</h3>
                  <p style="color: #444; font-size: 14px; margin-bottom: 8px;">
                    ${news.description.length > 200 ? news.description.substring(0, 200) + '...' : news.description}
                  </p>
                  <div style="font-size: 13px; color: #666;">
                    <span><strong>By:</strong> ${news.name}</span> |
                    <span><strong>Date:</strong> ${new Date(news.Date).toLocaleDateString()}</span>
                  </div>
                </a>
                </div>
              `;
      
              container.appendChild(card);
            });
      
            // Hide "Load More" if no more data
            if (data.length < itemsPerPage) {
              document.getElementById("loadMoreBtn").style.display = "none";
            }
      
          } catch (error) {
            console.error('Error loading more news:', error);
          }
        }
      
        // Initial load
        loadNews();
      
        // Button click: load next page
        document.getElementById("loadMoreBtn").addEventListener("click", () => {
          currentPage++;
          loadNews();
        });
      </script>
      
      
      

   
   
