        <script>
            const weatherData = <%- JSON.stringify(weatherData) %>;
            let currentIndex = 0;
        
            function updateWeather() {
                const display = document.getElementById("weatherDisplay");
                const info = document.getElementById("weatherInfo");
                const iconContainer = document.getElementById("weatherIcon");
        
                if (!weatherData.length) return;
        
                const weather = weatherData[currentIndex];
        
                // Update icon
                let iconHTML = "";
                const condition = weather.condition.toLowerCase();
                if (condition.includes("rain")) {
                    iconHTML = '<i class="fas fa-cloud-showers-heavy text-primary"></i>';
                } else if (condition.includes("clear")) {
                    iconHTML = '<i class="fas fa-sun text-warning"></i>';
                } else if (condition.includes("cloud")) {
                    iconHTML = '<i class="fas fa-cloud text-secondary"></i>';
                } else {
                    iconHTML = '<i class="fas fa-smog text-muted"></i>';
                }
        
                iconContainer.innerHTML = iconHTML;
                info.textContent = `${weather.location}: ${weather.temperature}¬∞C, ${weather.condition}`;
        
                // Animate fadeIn
                display.classList.remove("animate__fadeIn");
                void display.offsetWidth; // reflow
                display.classList.add("animate__fadeIn");
        
                currentIndex = (currentIndex + 1) % weatherData.length;
            }
        
            // Auto switch every 2 seconds
            setInterval(updateWeather, 2000);
        </script>

       
