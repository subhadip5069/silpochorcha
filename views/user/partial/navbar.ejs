    <script>
        
            function googleTranslateElementInit() {
            new google.translate.TranslateElement(
                { pageLanguage: "en", autoDisplay: false },
                "google_translate_element"
            );
        }
    
        function removeGoogleTranslateToolbar() {
            let frame = document.querySelector(".goog-te-banner-frame");
            let skipTranslate = document.querySelector(".skiptranslate");
    
            if (frame) frame.style.display = "none";
            if (skipTranslate) skipTranslate.style.display = "none";
            document.body.style.top = "0px";
        }
    
        // Observe DOM changes and remove Google Translate toolbar dynamically
        const observer = new MutationObserver(() => {
            removeGoogleTranslateToolbar();
        });
    
        observer.observe(document.body, { childList: true, subtree: true });
    
        document.addEventListener("DOMContentLoaded", function () {
            let customTranslate = document.getElementById("custom_translate");
    
            if (customTranslate) {
                customTranslate.addEventListener("change", function () {
                    let lang = this.value;
                    let googleSelect = document.querySelector(".goog-te-combo");
    
                    if (googleSelect) {
                        googleSelect.value = lang;
                        googleSelect.dispatchEvent(new Event("change"));
                    }
    
                    // Hide toolbar after selection
                    setTimeout(removeGoogleTranslateToolbar, 100);
    
                    // Reload when switching back to English
                    if (lang === "en") {
                        setTimeout(() => location.reload(), 150);
                    }
                });
            }
        });
    </script>
    
    
