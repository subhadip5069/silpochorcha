    <!-- Current Time -->
    <div id="current-time" class="text-center my-2 my-md-0" style="font-size: 16px; font-weight: bold;"></div>
    <script>
        function updateTime() {
          const now = new Date();
          const timeString = now.toLocaleTimeString(); // Formats to something like "10:23:45 AM"
          document.getElementById("current-time").textContent = timeString;
        }
      
        // Update the time immediately on load
