
<%- include('partial/navbar') %>
<style>
    /* Inline CSS */
    body {
        font-family: Arial, sans-serif;
        margin-top: 20px;
    }

    .main-news,
    .yesterday-news {
        border: 1px solid #ddd;
        padding: 15px;
        margin-bottom: 20px;
        border-radius: 5px;
    }

    .news-title {
        font-size: 1.5rem;
        font-weight: bold;
    }

    .news-date {
        font-size: 0.9rem;
        color: #777;
    }

    .news-content {
        font-size: 1rem;
        margin-top: 10px;
    }

    .news-list-item {
        border-bottom: 1px solid #ddd;
        padding: 10px 0;
    }

    .news-list-item:last-child {
        border-bottom: none;
    }

    .news-link {
        font-size: 1.2rem;
        font-weight: bold;
        color: #007bff;
        text-decoration: none;
    }

    .news-link:hover {
        text-decoration: underline;
    }

    /* Scrollable Left Section */
    .scrollable-news {
        height: 500px;
        overflow-y: scroll;
        padding-right: 10px;
    }

    /* Full Section Scrollable */
    .scrollable-section {
        max-height: 100vh; /* Set a maximum height for the entire section */
        overflow-y: auto; /* Enable vertical scrolling for the entire section */
        padding-right: 10px;
    }

    .container {
        margin-top: 20px;
    }

    /* Ad Section Styling */
    .ad-section {
        border: 1px solid #ddd;
        background-color: #f7f7f7;
       
       
        border-radius: 5px;
        text-align: center;
    }

    .ad-section img {
        max-width: 100%;
        height: auto;
    }
</style>

<div class="container">
    <div class="row">
        <!-- Left Section: All News (Scrollable) -->
        <div class="col-md-4">
            
                <h3>All News</h3>
                <div class="scrollable-news">
                    <div class="list-group">
                        <!-- Dynamically Render Other News with Images -->
                        <% if (outherNews.length > 0) { %>
                            <% outherNews.forEach(function(article) { %>
                                <a href="/<%= article.path %>/<%= article._id %>" class="news-link text-dark fw-bold d-block" 
                                   style="text-decoration: none;">
                                    <!-- News List Item -->
                                <div class="news-list-item d-flex align-items-center border-bottom py-2">
                                    <!-- News Image -->
                                    <img src="/<%= article.image %>" class="img-thumbnail me-2"
                                         style="width: 80px; height: 60px; object-fit: cover; border-radius: 5px;" 
                                         alt="News Image">
                                    
                                    <!-- News Details -->
                                    <div>
                                        
                                            <%= article.title %>
                                       
                                        <p class="news-date text-muted small mb-1">üïí <%= article.Date || "Recent" %></p>
                                        <p class="news-location text-muted small">üìç <%= article.location || 'Unknown' %></p>
                                    </div>
                                </div>
                            </a>
                            <% }); %>
                        <% } else { %>
                            <p class="text-muted">No other news available.</p>
                        <% } %>
                    </div>
              
                </div>
            
            

            <!-- Ad Section under the left side scroll -->
            <div class="ad-section">
                <div class="d-flex flex-column gap-3">
                    <% ads.forEach(function(ad) { %>
                        <div class="card text-center">
                            <p><%= ad.title.charAt(0).toUpperCase() + ad.title.slice(1) %>
                            </p>
                            <img src="/<%= ad.image %>" style="height: 200px;" alt="Ad" class="img-fluid">
                        </div>
                    <% }); %>
                </div>
            </div>
             <!-- Ad Section under the left side scroll -->
            
        </div>

        <!-- Right Section: Current Main News -->
        <div class="col-md-8">
            <!-- Ad Section on top of the right-side news -->
       
            <!-- Full Scrollable Section -->
            <div class="scrollable-section" style="max-height: 110vh; overflow-y: auto; padding-right: 15px;">
        
                
              
                
                <!-- Other News Section -->
                <h3 class="mt-4 fw-bold" style="background-color: rgb(0, 0, 0); height: 50px; border-radius: 10px; text-align: center; color: rgb(255, 245, 103); border: rgb(255, 0, 0) 1px double; " ><% if (outherNews[0].path === "latest") { %>

                    üÜï Latest News

                <% } else if (outherNews[0].path === "health") { %>

                    üì∞ Health News

                <% } else if (outherNews[0].path === "national") { %>  

                    üì∞ National News

                <% } else if (outherNews[0].path === "entertaitment") { %>

                    üé¨ Entertainment News

                <% } else if (outherNews[0].path === "sports") { %>

                    üèÜ Sports News

                <% } else if (outherNews[0].path === "international") { %>

                    üåç International News

                <% } else  { %>

                    üì∞ Other News

                <% } %> </h3>
                
                    <% if (outherNews.length > 0) { %>
                        <% outherNews.reverse().forEach(function(article) { 
                        %>
                        <h3 class="news-title font-weight-bold"><%= article.title %></h3>
                        <p class="news-date text-muted">üïí <%= article.Date || "Recent" %></p>
                
                        <!-- Full Content -->
                        <div class="news-content">
                            <!-- Image -->
                            <img src="/<%= article.image %>" class="img-fluid rounded my-3" 
                                 style="width: 100%; max-height: 450px; object-fit: cover;" 
                                 alt="Main News Image">
                
                            <!-- Additional Details -->
                            <p><strong>üìç Location:</strong> <%= article.location %></p>
                            <p><strong>üåç Country:</strong> <%= article.country || 'India' %></p>
                            <p class="lead"><%= article.description %></p> <!-- Larger text for better readability -->
                
                            <!-- Video Link Button -->
                            <% if (article.link) { %>
                                <a href="<%= article.link %>" class="btn btn-danger btn-sm mt-2" target="_blank">
                                    üé• Watch News
                                </a>
                            <% } %>
                        </div>
                        <br>
                        <% }); %>
                    <% } else { %>
                        <p class="text-muted">No other related news available.</p>
                    <% } %>
               
                
            </div>
            <div class="card ad-section" style=" border-radius: 10px; overflow: hidden;">
                <h5 class="card-title text-dark text-center" style="font-size: 14px; ">
                    <b>Sponsored by</b>
                    <p style="font-size: 12px; margin: 0;">(<%=sponcered.name%>)</p>
                </h5>
                <a href="<%=sponcered.link%>" target="_blank" style="text-decoration: none;">
                    <div class="card-body text-center" style="background-color: #f7f7f7; border-radius: 10px;">
                        <!-- Image Wrapper to Ensure Full Coverage -->
                        <div style="  overflow: hidden; border-radius: 10px;">
                            <img src="/<%=sponcered.image%>" alt="Sponsored Ad" 
                                 class="img-fluid m-0 p-0" 
                                 style="object-fit: cover;">
                        </div>
                    </div>
                </a>
            </div>
        </div>
        
    </div>
</div>
<%- include("partial/footer") %>
<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
